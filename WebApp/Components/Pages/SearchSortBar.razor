	<h3>Поиск и сортировка</h3>

	<div class="searchBlock">
		<div class="search-spec-name">
			<div class="blockName">
				<div class="name">Название специальности</div>
				<button @onclick="@NameSortBtnClick">@btnStr</button>
			</div>
